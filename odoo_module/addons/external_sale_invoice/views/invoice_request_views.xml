<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_invoice_request_tree" model="ir.ui.view">
        <field name="name">view.invoice.request.tree</field>
        <field name="model">invoice.request</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Invoice Request">
                <field name="partner_id"/>
                <field name="sale_id"/>
                <field name="invoice_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_invoice_request_form" model="ir.ui.view">
        <field name="name">view.invoice.request.form</field>
        <field name="model">invoice.request</field>
        <field name="arch" type="xml">
            <form string="Invoice Request">
                <header>
                    <button name="button_approve" string="Approve" class="oe_highlight"
                            type="object"
                            invisible="state != 'draft'"
                    />
                    <button name="button_reject" string="Reject"
                            type="object"
                            invisible="state != 'draft'"
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" readonly="state != 'draft'"/>
                            <field name="sale_id" readonly="state != 'draft'"/>
                            <field name="invoice_id" readonly="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" class="mail_followers"/>
                    <field name="message_ids" class="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ACTIONS (WINDOW) -->
    <record id="action_view_invoice_request" model="ir.actions.act_window">
        <field name="name">Invoice Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">invoice.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Invoice Request!
            </p>
        </field>
    </record>

    <menuitem
        id="menu_invoice_request"
        name="Invoice Request"
        parent="sale.menu_sale_invoicing"
        action="action_view_invoice_request"
        sequence="5"
    />
</odoo>
